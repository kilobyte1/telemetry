{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">

        <h3>{{ page_heading_2 }}</h3>

        <form method="post" action="{{ sms_page_action }}">
            <fieldset>
                <legend>Login</legend>
                <br>
                <label for="login_email">Email:</label>
                <input id="login_email" name="login_email" type="text" size="30" maxlength="50">
                <br><br>
                <label for="login_password">Password:</label>
                <input id="login_password" name="login_password" type="password" size="30" maxlength="50">
                <br><br>
                <input type="button" value="Login" onclick="redirectToSmsPage()">
            </fieldset>
        </form>

        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>

        <p>Don't have an account? <a href="/telemetry/signup">Sign up</a></p>

        <script>

            //just using this for quick progress. needs to be changed to validate login
            // will do this later
            function redirectToSmsPage() {
                // Redirect to the SMS page URL
                window.location.href = "/telemetry/smspage";
            }
        </script>
    </div>
{% endblock %}
