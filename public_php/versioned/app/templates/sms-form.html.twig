{% extends 'banner.html.twig' %}
{% block content %}

<div id="page-content-div">

<div class="row mt-3">
        <div class="col-7">
            <h2>{{ page_heading_2 }}</h2>
        </div>
    </div>

    <div class="row" style="margin-top: 50px">
        <div class="col-8 offset-2 border border-primary p-3">
            <small id="emailHelp" class="form-text text-muted">Create a new message below.</small>

            <form method={{method}} action="{{ action }}">
                <div class="form-group">
                    <label for="phoneNumber">Phone number</label>
                    <input type="number"
                           class="form-control"
                           id="phoneNumber"
                           name="phoneNumber"
                           placeholder="Enter your phone number">
                </div>
                <div class="form-group">
                    <label for="message">Your message</label>
                    <textarea class="form-control"
                              id="message"
                              name="message"
                              rows="5"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="send">Send</button><br>

                </div>
            </form>
        </div>
    </div>
</div>


{% endblock %}
